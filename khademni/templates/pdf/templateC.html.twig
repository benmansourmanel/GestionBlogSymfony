        .title {
            text-align: center;
            margin-bottom: 20mm;
            font-size: 18pt;
            font-weight: bold;
        }
        .table-container {
            width: 100%;
            overflow: hidden;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            page-break-inside: auto;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
        }
        th {
            background-color: red; /* Change header color to red */
            color: white; /* Ensure text is readable */
        }
        .page-break {
            page-break-before: always;
        }
    </style>
</head>
